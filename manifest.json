{

    "manifest_version": 2,
    "name": "All-in",
    "description": "Collect all-in hand equity data",
    "version": "1.0",

    "browser_action": 
    {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
    },

    "background": 
    {
    "scripts": ["background.js"],
    "persistent": false
    },

    "content_scripts": [
    {
    "matches": ["https://*.kingsclubpkr.com/?mode=table*"],
    "js": ["table_checker.js"]
    }
    ],

    "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "https://ajax.googleapis.com/",
    "http://*/",
    "https://*/"
    ]
}